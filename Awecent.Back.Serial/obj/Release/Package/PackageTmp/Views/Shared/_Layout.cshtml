    <style>
        .navbar.navbar-inverse.navbar-fixed-top {
            position: relative;
        }


        html, body {
            height: 100%;
        }

        body {
            color: #777;

        }

        .wrapper {
            display: flex;
            min-height: 100%;
        }
        .main {
            flex: 1;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.8);
            background-color: #fff;
        }

        .nav {
            width: 230px;
            background: #4a6a8a;
        }
            .nav.active {
                width: 0;
            }

        .link {
            position: relative;
            display: block;
            padding-left: 40px;
            height: 40px;
            line-height: 40px;
            font-size: 14px;
            color: #eee;
            cursor: pointer;
            transition: .2s all;
        }

            .link:before {
                top: 12px;
                left: 23px;
                font: 16px fontawesome;
            }

            .link:hover {
                background: #43607d;
            }

            .link.active {
                background: #3c566f;
                box-shadow: inset 5px 0 0 #0af;
            }


        .title {
            height: 40px;
            line-height: 40px;
            margin: 10px 0;
            padding: 0 22px;
            text-transform: uppercase;
            color: #7f9dbb;
            background: #43607d;
        }


        .desc {
            position: relative;
            top: 0;
            padding: 3em;
            /*font-size: 50px;
            font-weight: 300;
            margin-top: -30px;*/
        }
        .nav-menu a {
            color: #fff;
            text-decoration: none;
        }
        .nav-menu p {
            color: #fff;
            margin: 10px 0;
        }


/* menu */
        .main-menu {
            /* width: 40px; */
            /* height: 50px; */
            position: absolute;
            top: 1em;
            padding-left: 1em;

            z-index: 999;
            /* margin-left: -20px; */
            /* margin-top: -25px; */
        }
            .main-menu:hover {
                cursor: pointer;
            }

            .main-menu.open .menu-item {
                background: #000;
            }

                .main-menu.open .menu-item:first-child {
                    -moz-transform: rotate(45deg);
                    -ms-transform: rotate(45deg);
                    -webkit-transform: rotate(45deg);
                    transform: rotate(45deg);
                    -moz-transform-origin: 10px 50%;
                    -ms-transform-origin: 10px 50%;
                    -webkit-transform-origin: 10px 50%;
                    transform-origin: 10px 50%;
                }

                .main-menu.open .menu-item:nth-child(2) {
                    opacity: .5;
                }

                .main-menu.open .menu-item:nth-child(3) {
                    -moz-transform: rotate(-45deg);
                    -ms-transform: rotate(-45deg);
                    -webkit-transform: rotate(-45deg);
                    transform: rotate(-45deg);
                    -moz-transform-origin: 8px 50%;
                    -ms-transform-origin: 8px 50%;
                    -webkit-transform-origin: 8px 50%;
                    transform-origin: 8px 50%;
                }

        .menu-item {
            -moz-transition-property: all;
            -o-transition-property: all;
            -webkit-transition-property: all;
            transition-property: all;
            -moz-transition-duration: 0.2s;
            -o-transition-duration: 0.2s;
            -webkit-transition-duration: 0.2s;
            transition-duration: 0.2s;
            display: block;
            width: 35px;
            height: 3px;
            margin: 0 0 5px;
            background: #000;
        }

    </style>
    <section class="mod model-10 loading" id="spinner">
        <div class="spinner"></div>
    </section>


    <div class='wrapper'>
        <div class='nav nav-menu'>

            <p class="text-center">@User.Identity.Name</p>
            <p class="text-center"><a href="@Url.Action("SignOut", "Auth")">signout</a></p>


            <div class='title'>Navigation</div>

            <a href="@Url.Action("Index","Home")">
                <div class='link'>
                    Dashboard
                </div>
            </a>
            

            <div class='title'>Admin</div>
            @if (User.IsInRole("Administrator") || User.IsInRole("Product"))
            {
                <a href="@Url.Action("Index", "Master")">
                    <div class='link'>
                        Master Code
                    </div>
                </a>

            }


            @if (User.IsInRole("Reporter") || User.IsInRole("Administrator") || User.IsInRole("Product"))
            {

            <div class='title'>Report</div>
             <a href="@Url.Action("ItemCode", "Report")">
                <div class='link'>
                    Item Code
                </div>
             </a>
                
                if (User.IsInRole("Administrator") || User.IsInRole("Product"))
                {

                     <a href="@Url.Action("Registration", "Report")">
                        <div class='link'>
                            Register User 
                        </div>
                     </a>
                     <a href="@Url.Action("Active", "Report")">
                        <div class='link'>
                            Active Users / Hour
                        </div>
                     </a>
                }
            }
            
        </div>


        <div class='main'>

            <div class="main-menu">
                <span class="menu-item"></span>
                <span class="menu-item"></span>
                <span class="menu-item"></span>
            </div>

            <div class='desc'>

                <div class="">
                    @RenderBody()
                </div>

            </div>
        </div>



    </div>




